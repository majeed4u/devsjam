FROM oven/bun:1 AS pruner
WORKDIR /repo
COPY . .
RUN bunx turbo prune web --docker --out-dir /repo/out

FROM oven/bun:1 AS deps
WORKDIR /app
COPY --from=pruner /repo/out/json/ ./
RUN bun install --frozen-lockfile

FROM deps AS builder
WORKDIR /app
COPY --from=pruner /repo/out/full/ ./
ENV NODE_ENV=production
RUN bun run build -F web

FROM nginx:1.27-alpine AS runner
WORKDIR /usr/share/nginx/html
COPY --from=builder /app/apps/web/dist ./
# Copy custom nginx config
COPY apps/web/docker/nginx.conf /etc/nginx/conf.d/default.conf
# Copy entrypoint script and config
COPY apps/web/public/config.js /usr/share/nginx/html/config.js
COPY apps/web/docker/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh
EXPOSE 80
ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]
